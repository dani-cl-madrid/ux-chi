---
title: Text Inputs
---

mixin input(style, state, size, disabled)
  input.a-input(
    type="text"
    class={
      [`-${style}`]:style != 'default',
      [`-${state}`]:state != 'initial',
      [`-${size}`]:size != 'default'
    }
    value="Value"
    disabled=state=='disabled'?'disabled':false
  )

mixin icon(name)
  if name == 'success'
    chi-icon(img='check')(class={
      [`-text${name}`]: ['success', 'warning', 'danger'].indexOf(name) != -1
    })
  else if name == 'warning'
    chi-icon(img='warning')(class={
      [`-text${name}`]: ['success', 'warning', 'danger'].indexOf(name) != -1
    })
  else if name == 'danger'
    chi-icon(img='circle-warning')(class={
      [`-text${name}`]: ['success', 'warning', 'danger'].indexOf(name) != -1
    })
  else if name == 'default'
    chi-icon(img='circle-info-outline')(class={
      [`-text${name}`]: ['success', 'warning', 'danger'].indexOf(name) != -1
    })
  else
    chi-icon(img=`${name}`)(class={
      [`-text${name}`]: ['success', 'warning', 'danger'].indexOf(name) != -1
    })

each size in ['default', 'small', 'large']
  div(class=`test-${size}`)
    span.a-h2= `Text Input / ${size}`
    table(cellpadding="0", cellspacing="0", width="1200px")
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'success', 'warning', 'danger']
            td
              .-m1
                +input(style, state, size, disabled)

  div(class=`test-${size}-icon-left`)
    span.a-h2= `Text Input / ${size} / icon left`
    table(cellpadding="0", cellspacing="0", width="1200px")
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'success', 'warning', 'danger']
            td
              .-m1
                .a-inputWrapper.-iconLeft
                  +input(style, state, size, disabled)
                  +icon('atom')

  div(class=`test-${size}-icon-right`)
    span.a-h2= `Text Input / ${size} / icon right`
    table(cellpadding="0", cellspacing="0", width="1200px")
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'success', 'warning', 'danger']
            td
              .-m1
                .a-inputWrapper.-iconRight
                  +input(style, state, size, disabled)
                  if style == 'success'
                    chi-icon(img='check').-textSuccess
                  else if style == 'warning'
                    chi-icon(img='warning').-textWarning
                  else if style == 'danger'
                    chi-icon(img='circle-warning').-textDanger
                  else
                    chi-icon(img='circle-info-outline')

  div(class=`test-${size}-icon-left-right`)
    span.a-h2= `Text Input / ${size} / icon left / icon right`
    table(cellpadding="0", cellspacing="0", width="1200px")
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'success', 'warning', 'danger']
            td
              .-m1
                .a-inputWrapper.-iconLeft.-iconRight
                  +input(style, state, size, disabled)
                  +icon('atom')
                  if style == 'success'
                    chi-icon(img='check').-textSuccess
                  else if style == 'warning'
                    chi-icon(img='warning').-textWarning
                  else if style == 'danger'
                    chi-icon(img='circle-warning').-textDanger
                  else
                    chi-icon(img='circle-info-outline')
